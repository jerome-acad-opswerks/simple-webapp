apiVersion: apps/v1
kind: Deployment
metadata:
  name: simple-webapp
  namespace: simple-webapp
  labels:
    color: {{color}}
spec:
  replicas: 5
  selector:
    matchLabels:
      app: simple-webapp
      type: production
  template:
    metadata:
      labels:
        app: simple-webapp
        type: production
	color: {{color}}
    spec:
      containers:
        - image: 'jeromeevangelista/simple-webapp:{{tag}}'
          name: simple-webapp
          ports:
            - containerPort: 8000
              name: web
            - containerPort: 8080
              name: metrics
